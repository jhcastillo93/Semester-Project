<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2>
<table>
  <%= render(@cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to "Checkout", new_order_path, :style=>'color:#000000;', method: :get %>
<%= button_to 'Empty cart', @cart, :style=>'color:#000000;', method: :delete, data: { confirm: 'Are you sure?' }, remote: true%>
<br><br>
