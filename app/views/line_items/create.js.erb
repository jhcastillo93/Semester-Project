$('#current_item').css({'background-color':'#88ff88'}).animate({'background-color':'#114411'}, 1000);
$(".popular_<%=@line_item.product.id%>").html("<%= escape_javascript render partial: "/store/prod_pop", locals: {pro: @line_item.product.id} %>");